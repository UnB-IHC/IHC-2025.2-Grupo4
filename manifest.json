{
    "name": "Detector de acessibilidade",
    "manifest_version": 3,
    "version": "0.1.0",
    "description": "Uma ferramenta para verificar se uma p√°gina possui acessbilidade.",

    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "icons": {
        "16": "assets/icons/verificaaa-16.png",
        "32": "assets/icons/verificaaa-32.png",
        "48": "assets/icons/verificaaa-48.png",
        "128": "assets/icons/verificaaa-128.png"
    },
    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "index.html",
        "default_title": "Detector de acessibilidade",
        "default_icon": {
            "16": "assets/icons/verificaaa-16.png",
            "32": "assets/icons/verificaaa-32.png"
        }
    },

    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}
