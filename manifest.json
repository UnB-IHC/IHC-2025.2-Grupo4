{
    "name": "Detector de acessibilidade",
    "manifest_version": 3,
    "version": "0.1.0",
    "description": "Uma ferramenta para verificar se uma p√°gina possui acessbilidade.",

    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },

    "web_accessible_resources": [
        {
            "resources": ["lib/axe.min.js"],
            "matches": ["<all_urls>"]
        }
    ],

    "action": {
        "default_popup": "index.html",
        "default_title": "Detector de acessibilidade"
    }
}